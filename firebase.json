{
	"hosting": {
	  "public": "public",
	  "ignore": [
		"firebase.json",
		"**/.*",
		"**/node_modules/**"
	  ],
	  "headers": [
		{
		  "source": "/dist/bundle.js",
		  "headers": [
			{
			  "key": "Cache-Control",
			  "value": "no-cache"
			}
		  ]
		}
	  ],
	  "rewrites": [
		{
		  "source": "**",
		  "destination": "/index.html"
		}
	  ]
	},
	"firestore": {
	  "rules": "firestore.rules",
	  "indexes": "firestore.indexes.json"
	}
}
  
